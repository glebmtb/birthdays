<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.1.xsd">

  <http access-denied-page="/error403.jsp">
    <intercept-url pattern="/login.jsp*" access="ROLE_ANONYMOUS"/>
    <intercept-url pattern="/resources/**" access="ROLE_ANONYMOUS, ROLE_USER, ROLE_ADMIN"/>
    <intercept-url pattern="/**" access="ROLE_USER, ROLE_ADMIN"/>
    <form-login login-page="/login.jsp" default-target-url="/index"
                authentication-failure-url="/login.jsp?error=true"/>
    <logout logout-url="/logout" logout-success-url="/index"/>

    <anonymous username="guest" granted-authority="ROLE_ANONYMOUS"/>
    <remember-me/>
  </http>

  <authentication-manager>
    <authentication-provider user-service-ref="userDetailsService">
      <password-encoder hash="md5"/>
    </authentication-provider>
  </authentication-manager>

  <beans:bean name="userDetailsService" class="ru.n5g.birthdays.administrator.server.service.UserServiceImpl"/>

</beans:beans>